<%= render "shared/header" %>
<div class='main'>
  <div class='title-contents'>
    <h3 class='service-title'>
      キャンプ記事投稿サイト
    </h3>
    <p class='service-explain'>
      CampersLifeで世界中の人と
    </p>
    <p class='service-explain'>
      思い出を共有しましょう
    </p>
    <div class='store-btn'>
      <%= link_to image_tag("app-store.svg", class:"apple-btn"), "#" %>
      <%= link_to image_tag("google-play.png", class:"google-btn"), "#" %>
    </div>
  </div>
  <div class="post-title">
    <h3 class="post-name">投稿一覧</h3>
  </div>
  <ul class='item-lists'>
    <% @posts.each do |post| %>
    <div class="post-box">
      <h3 class="item-name"><%= link_to post.title, post_path(post.id) %></h3>
        <div class='item-img-content'>
        <% post.images.each do |image| %>
          <%= image_tag(image, height:200, class:"post-image-view") %>
        <% end %>
        </div>
      <p>↓キャンプサイト情報↓</p>
      <li class="list">
        <div class='post-link'>
          <p>サイト名：<%= post.place %></p>
        </div>
      </li>
      <li class="list">
        <div class='post-link'>
          <p>　リンク：<%= raw Rinku.auto_link(post.link) %></p>
        </div>
      </li>

      <li class="list">
      </li>
    </div>
    <% end %>
  </ul>
</div>

<%= render "shared/second-footer"%>